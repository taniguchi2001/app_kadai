<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Update Book' %>
  </div>
  <p>  <%= @book.errors.count %> errors prohibited this book from being saved:</p>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
<% end %>

  <%= link_to "show", book_path(@book)%>
