<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Update Book' %>
  </div>
  <% end %>

  <a class="show" href="/books/new">Show</a>
  |
  <a class="back" href="/books/new">back</a>